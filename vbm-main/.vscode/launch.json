    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "cwd": "${workspaceFolder}/app/",
            "args": [
                "main:app",
                "--reload",
                "--port",
                "8110"
            ],
            "justMyCode": false,            
            "jinja": true,
            "env": {
                "TEST_MODE": "true",
                "DB_URL": "mongodb://localhost:27017"
            },
        }
    ]
}